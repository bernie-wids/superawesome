<h1>Listing adverts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Teaser</th>
    <th>Description</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @adverts.each do |advert| %>
  <tr>
    <td><%= advert.title %></td>
    <td><%= advert.teaser %></td>
    <td><%= advert.description %></td>
    <td><%= advert.active %></td>
    <td><%= link_to 'Show', advert %></td>
    <td><%= link_to 'Edit', edit_advert_path(advert) %></td>
    <td><%= link_to 'Destroy', advert, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

