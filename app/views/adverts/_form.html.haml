- simple_form_for(@advert) do |f|
	- if @advert.errors.any?
		#error_explanation
			%h2
				= pluralize(@advert.errors.count, "error")
				prohibited this advert from being saved:

			%ul
				- @advert.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.input :title
	.field
		= f.input :teaser
	.field
		= f.input :description, :as => :text
	.field
		= f.input :active, :as => :radio
	.actions
		= f.submit